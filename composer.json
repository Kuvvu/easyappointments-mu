{
    "name": "kuvvu/easyappointments-mu",
    "description": "Open Source Multi Domains Web Scheduler",
    "keywords": [
        "calendar",
        "scheduler",
        "appointments",
        "events",
        "dates",
        "google",
        "services"
    ],
    "type": "project",
    "homepage": "http://kuvvu.ch",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Simon Jenny",
            "email": "simon.jenny@kuvvu.ch"
        }
    ],
    "minimum-stability": "stable",
    "require-dev": {
        "phpunit/phpunit": "^5.6"
    },
    "require": {
        "php": ">=5.6",
        "roave/security-advisories": "dev-master",
        "gregwar/captcha": "^1.1",
        "codeigniter/framework": "^3.1.6",
        "jsvrcek/ics": "^0.5.1",
        "vlucas/phpdotenv": "^4.1",
        "phpmailer/phpmailer": "^6.1"
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
      "sync": "clear && rsync -rvaz --delete --exclude=error.log --exclude=storage --exclude=test --exclude=.git ../easyappointments-mu/* dev.kuvvu.ch:/opt/easyappointments-mu/",
      "watch": "onchange -v -d 10000 '**/*'  -- composer sync",
      "test": "test/test"
    }
}
